{{> head}}
{{> top}}

   {{#tag}}
      <div class="page-header">
         <h1>
            {{name}}
            {{#if tagViewConfig.displayPostCounter}}<sup>({{postsNumber}})</sup>{{/if}}
         </h1>
         {{#if tagViewConfig.displayDescription}} 
            {{{description}}}
         {{/if}}
      </div>
      {{#if tagViewConfig.displayPostList}}
         <section>
            <div class="posts">
               {{#each ../posts}}
                  <article>
                     {{#if @config.custom.feedFeaturedImage}}
                        {{#featuredImage}}
                           {{#if url}}
                              <a href="{{../url}}" class="image fit">
                                 <img
                                    src="{{url}}"
                                    {{#if @config.site.responsiveImages}}
                                       {{responsiveImageAttributes 'featuredImage' srcset.card sizes.card}}
                                    {{/if}}
                                    {{ lazyload "lazy" }}
                                    height="{{height}}"
                                    width="{{width}}"
                                    alt="{{alt}}">
                              </a>
                           {{/if}}
                        {{/featuredImage}}
                     {{/if}}
                     <h3>
                        <a href="{{url}}">{{title}}</a>
                     </h3>

                     {{#if hasCustomExcerpt}}
                        {{{ excerpt }}}
                     {{else}}
                        <p>{{{ excerpt }}}</p>
                     {{/if}}

                     {{#if @config.custom.feedReadMore}}
                        <ul class="actions">
                           <li>
                              <a href="{{url}}" class="button">{{ translate 'common.more' }}</a>
                           </li>
                        </ul>
                     {{/if}}
                  </article>
               {{/each}}
            </div>
         </section>
         {{> pagination}}
      {{/if}}
   {{/tag}}

   </div>
</div>
    {{> sidebar}}
</div>

{{> footer}}
